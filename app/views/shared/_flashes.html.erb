<% if notice %>
  <div class="alert alert-info" role="alert">
    <button type="button" class="btn-close" aria-label="Close"></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning" role="alert">
    <button type="button" class="btn-close" aria-label="Close"></button>
    <%= alert %>
  </div>
<% end %>